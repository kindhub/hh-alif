mixin icon(id, className)
	svg(xmlns:xlink="http://www.w3.org/1999/xlink" class=className)
		use(xlink:href="#tmpl-hh__icon-" + id href="#tmpl-hh__icon-" + id)

mixin video(video, thumbnail, source="youtube")
	.video(data-video-id=video data-video-source=source)
		img.video__preview(src=thumbnail)
		.video__play-btn
			+icon('play-btn')

mixin nav-btn
	.nav-btn
		.nav-btn__line
		.nav-btn__line
		.nav-btn__line

mixin values-card(imgSrc, title, text)
	.values-card
		.values-card__img-wrapper 
			img.values-card__img(src=imgSrc)
		.values-card__content 
			.values-card__title!=title 
			.values-card__text!=text

mixin slider-gallery-slide(imgSrc)
	.swiper-slide.slider-gallery-slide
		img.slider-gallery-slide__img(src=imgSrc)
